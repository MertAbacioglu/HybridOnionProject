@{
    ViewData["Title"] = "Save";
}
@model ProductAddVM
<h1>Save Product</h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Save" method="post" asp-controller="Products">

            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="@Model.Stock"></label>
                <input asp-for="@Model.Stock" class="form-control" />
                <span asp-validation-for="@Model.Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Price"></label>
                <input asp-for="@Model.Price" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>





            <div class="form-group">
                <label asp-for="@Model.CategoryId">Category</label>
                <select asp-for="@Model.CategoryId" asp-items="@Model.CategorySelectList" class="form-control"></select>

            </div>

            <div class="form-group">

                <input type="submit" value="Add Product" class="btn-primary" />

            </div>
        </form>



    </div>


</div>

